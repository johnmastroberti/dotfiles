label-empty = %name%
label-empty-foreground = ${xrdb:foreground:#ff0000}
label-empty-padding = 1

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
interval = 5
label-volume = Vol: %percentage%%


[module/network]
type = internal/network
interface = wlp1s0
