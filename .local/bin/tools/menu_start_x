#!/bin/sh
# Provides a menu when logging in on tty to
# choose what wm/de to load
choicefile="/tmp/wmchoice"
dialog --menu "Choose WM:" 10 30 3 \
  1 dwm \
  2 bspwm \
  3 openbox \
  4 tty 2>$choicefile

chosenwm=$(cat $choicefile)
case $chosenwm in
  1) cp $HOME/.config/dwm/dwm.xinitrc $HOME/.xinitrc && startx ;;
  2) cp $HOME/.config/bspwm/bp.xinitrc $HOME/.xinitrc && startx ;;
  3) cp $HOME/.config/openbox/ob.xinitrc $HOME/.xinitrc && startx ;;
  *) clear && $SHELL ;;
esac
rm $choicefile
